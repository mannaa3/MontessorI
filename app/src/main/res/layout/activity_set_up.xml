<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetUpActivity"
    android:background="@drawable/ic_test4"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="107dp"
        android:layout_marginTop="59dp"
        android:src="@drawable/profile"
        android:id="@+id/setup_profile_image"/>

    <EditText
        android:id="@+id/setup_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_profile_image"
        android:layout_marginTop="25dp"
          android:hint=" UserName"
        android:inputType="textMultiLine"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/ic_user_name"
        android:padding="15dp"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

    <EditText
        android:id="@+id/setup_full_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_userName"
         android:layout_marginTop="25dp"
        android:hint=" FullName"
          android:inputType="textMultiLine"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/ic_user_fullname"
        android:padding="15dp"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

        <EditText
            android:id="@+id/setup_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setup_full_userName"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint=" Mobile Number"
            android:inputType="textMultiLine"
            android:background="@drawable/inputs"
            android:drawableLeft="@drawable/ic_mobile"
            android:padding="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <EditText
            android:id="@+id/setup_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setup_mobile_number"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint=" Address"
            android:inputType="textMultiLine"
            android:background="@drawable/inputs"
            android:drawableLeft="@drawable/ic_language"
            android:padding="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <Button
        android:id="@+id/setup_information_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_address"
        android:layout_centerHorizontal="true"
          android:layout_marginTop="25dp"
         android:text="حفظ البيانات "
        android:background="@drawable/button"
        android:padding="15dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:maxLines="1"
        />
    </RelativeLayout>
</ScrollView>