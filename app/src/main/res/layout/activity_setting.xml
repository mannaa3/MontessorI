<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_test4"
    tools:context=".SettingActivity">

    <include
        android:id="@+id/setting_toobar"
        layout="@layout/app_bar_layout">

    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setting_toobar">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">


      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/setting_profile_image"
          android:layout_width="250dp"
          android:layout_height="250dp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="10dp"
          android:src="@drawable/profile">

      </de.hdodenhof.circleimageview.CircleImageView>
      <EditText
          android:id="@+id/setting_status"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/setting_profile_image"
          android:layout_marginLeft="40dp"
          android:layout_marginRight="40dp"
          android:layout_marginTop="4dp"
          android:background="@drawable/inputs"
          android:hint="profile Stautes"
          android:padding="20dp"
          android:textColor="@android:color/background_dark"
          android:textSize="20sp"
          android:textStyle="bold"
          android:maxLines="3"
          />
      <EditText
          android:id="@+id/setting_username"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/setting_status"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="30dp"
          android:background="@drawable/inputs"
          android:hint="User Name"
          android:padding="12dp"
          android:textColor="@android:color/background_dark"
          android:textSize="20sp"
          android:textStyle="bold"
          android:maxLines="1"
          />
      <EditText
          android:id="@+id/setting_profile_full_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/setting_username"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="6dp"
          android:background="@drawable/inputs"
          android:hint="Full Name"
          android:padding="12dp"
          android:textColor="@android:color/background_dark"
          android:textSize="20sp"
          android:textStyle="bold"
          android:maxLines="1"
          />
      <EditText
          android:id="@+id/setting_profile_country"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/setting_profile_full_name"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="6dp"
          android:background="@drawable/inputs"
          android:hint="countery"
          android:padding="12dp"
          android:textColor="@android:color/background_dark"
          android:textSize="20sp"
          android:textStyle="bold"/>
      <EditText
          android:id="@+id/setting_dob"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/setting_profile_country"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="6dp"
          android:background="@drawable/inputs"
          android:hint="Data of Birth"
          android:padding="12dp"
          android:textColor="@android:color/background_dark"
          android:textSize="20sp"
          android:textStyle="bold"
          android:maxLines="1"
          />
      <EditText
          android:id="@+id/setting_gender"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/setting_dob"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="6dp"
          android:background="@drawable/inputs"
          android:hint="Gernder"
          android:padding="12dp"
          android:textColor="@android:color/background_dark"
          android:textSize="20sp"
          android:textStyle="bold"
          android:maxLines="1"
          />
      <EditText
          android:id="@+id/setting_relationship_status"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/setting_gender"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="6dp"
          android:background="@drawable/inputs"
          android:hint="RelationShip Status"
          android:padding="12dp"
          android:textColor="@android:color/background_dark"
          android:textSize="20sp"
          android:textStyle="bold"
          android:maxLines="1"
          />
      <Button
          android:id="@+id/update_account_setting_button"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_below="@+id/setting_relationship_status"
          android:text="Update  Account Setting"
          android:layout_margin="20dp"
          android:background="@drawable/button"
          android:textColor="@color/colorAccent"
          android:textSize="20sp"
          android:textStyle="bold"
          android:textAllCaps="false"
          android:maxLines="1"
          />



  </RelativeLayout>
    </ScrollView>


</RelativeLayout>